<section class="row">
   <div class="col-12 col-md-8 col-lg-4 mx-auto p-4 bg-custom-blue rounded shadow text-light">
      <h1 class="text-center mb-3">Registro</h1>
      <form action="/users/signup" method="POST">
         <div class="form-group">
            <label>Nombre de usuario</label>
            <input name="username" type="text" class="form-control" value="{{username}}"> 
         </div>
         <div class="form-group">
            <label>Correo</label>
            <input name="email" type="email" class="form-control" value="{{email}}"> 
         </div>
         <div class="form-group">
            <label>Contraseña</label>
            <input name="password" type="password" class="form-control"> 
         </div>
         <div class="form-group">
            <label>Confirmar Contraseña</label>
            <input name="confirm_password" type="password" class="form-control"> 
         </div>
         <input class="btn btn-outline-light" type="submit" value="Enviar">
      </form>
   </div>
</section>

<script src="/js/register.js"></script>
<script src="/js/forms.js"></script>